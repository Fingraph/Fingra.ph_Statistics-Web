<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

  <insert id="insert" useGeneratedKeys="true" keyProperty="memberid">
    INSERT INTO member
      (memberid,userid,name,password,department,phone,status,joinstatus,created)
    VALUES
      (#{memberid},#{userid},#{name},#{password},#{department},#{phone},#{status},#{joinstatus},now())
  </insert>

  <update id="update">
    UPDATE member SET
      name=#{name},
      <if test="@ph.fingra.statisticsweb.common.util.ComparatorUtil@isNotEmpty(password)">
        password=#{password},
      </if>
      department=#{department},
      phone=#{phone},
      modified=now()
    WHERE memberid=#{memberid}
  </update>

  <update id="updateStatus">
    UPDATE member SET
      status=#{status},
      modified=now()
    WHERE userid=#{userid}
  </update>

  <update id="updateJoinstatus">
    UPDATE member SET
      joinstatus=#{joinstatus},
      modified=now()
    WHERE userid=#{userid}
  </update>

  <update id="updatePassword">
    UPDATE member SET
      password=#{password},
      modified=now()
    WHERE memberid=#{memberid}
  </update>

  <delete id="delete">
    DELETE FROM member WHERE userid=#{value}
  </delete>

  <update id="updateMemberLastLoginTime">
    UPDATE member SET
      lastlogin=now()
    WHERE memberid=#{memberid}
  </update>

  <select id="getList" resultType="Member">
    SELECT *, 0 AS role FROM member
  </select>

  <select id="getListByStatus" resultType="Member">
    SELECT *, 0 AS role FROM member WHERE status=#{value}
  </select>

  <select id="getListByJoinstatus" resultType="Member">
    SELECT *, 0 AS role FROM member WHERE joinstatus=#{value}
  </select>

  <select id="findByUserid" resultType="Member">
    SELECT *, 0 AS role FROM member WHERE userid=#{userid}
  </select>

  <select id="countByUserid" resultType="int">
    SELECT count(*) FROM member WHERE userid=#{value}
  </select>

  <select id="findById" resultType="Member">
    SELECT *, 0 AS role FROM member WHERE memberid=#{value}
  </select>

</mapper>
